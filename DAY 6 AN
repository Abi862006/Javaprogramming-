  import java.util.*;

public class SumTwoArrays {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        
        int n = scan.nextInt(); 
        int[] a = new int[n];
        int[] b = new int[n];
        
        for (int i = 0; i < n; i++) {
            a[i] = scan.nextInt();
        }
        
        for (int i = 0; i < n; i++) {
            b[i] = scan.nextInt();
        }
        
        int[] sum = new int[n];
        for (int i = 0; i < n; i++) {
            sum[i] = a[i] + b[i];
        }
        
        for (int val : sum) {
            System.out.print(val + " ");
        }
    }
}
OUTPUT:
OUTPUT:
Input:
5
1 2 3 4 5
5 4 3 2 1
Output:
6 6 6 6 6
