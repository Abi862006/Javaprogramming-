import java.util.Scanner;
import java.util.Arrays;
public class GetBytesAndChar {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a string: ");
        String str = sc.nextLine();
        System.out.print("Enter position to get character (0-based index): ");
        int index = sc.nextInt();
        if (index >= 0 && index < str.length()) {
            char ch = str.charAt(index);
            System.out.println("Character at index " + index + ": " + ch);
        } else {
            System.out.println("Invalid index!");
        }
        byte[] byteArray = str.getBytes();
        System.out.println("Bytes of the string: " + Arrays.toString(byteArray));
        }
}
output:
Enter a string: alamelu
Enter position to get character (0-based index): 2
Character at index 2: a
Bytes of the string: [97, 108, 97, 109, 101, 108, 117]
